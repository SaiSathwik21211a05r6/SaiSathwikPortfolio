<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <FrameLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/cancelbutton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_cancel_24"
            android:textSize="16sp"
            android:padding="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dialog_title"
            android:layout_below="@id/dialog_title" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"


            android:text="Certificate"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cancelbutton4"
            app:layout_constraintBottom_toTopOf="@id/dialog_message"/>

        <!-- <Button
             android:id="@+id/dialog_button"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="OK"
             android:textSize="16sp"
             android:padding="16dp"
             android:layout_below="@id/dialog_message" />-->



        <ImageView
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginTop="64dp"
            android:padding="0dp"

            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dialog_title"
            app:srcCompat="@drawable/marksstatementclass10"
            tools:layout_editor_absoluteX="0dp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>