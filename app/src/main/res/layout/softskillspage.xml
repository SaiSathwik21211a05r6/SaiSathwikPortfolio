<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_1761190__340"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soft Skills"
        android:layout_margin="12dp"
        android:textSize="40sp"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/softskillsheader"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedlayout"
        android:layout_margin="12dp"
        android:id="@+id/aboutframe"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/softskillsheader"
        app:layout_constraintStart_toStartOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/aboutframe"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_margin="12dp"
            android:id="@+id/aboutdetails"
            android:background="@color/white"
            >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Communication"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/softskillsheader"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:id="@+id/communication"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Discussion"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/teammanagement"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:id="@+id/groupdiscussions"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technical Content Writing"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/documentation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:id="@+id/technicalcontentwriting"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Management"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/drafting"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:id="@+id/teammanagement"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drafting"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/technicalcontentwriting"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:id="@+id/drafting"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Documentation"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/communication"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:id="@+id/documentation"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persuasion"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/groupdiscussions"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:id="@+id/persuasion"
        />
        </LinearLayout>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>