<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_1761190__340"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:text="Certifications"
    android:layout_margin="12dp"
    android:background="@color/purple_700"
    android:textColor="@color/white"
    android:textSize="30sp"
    android:id="@+id/certificationsheading"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/certificationsheading"
        app:layout_constraintStart_toStartOf="parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/certificationsheading"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="12dp"
        android:id="@+id/certificationsfield"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/certificationsfield"
            android:text="Machine Learning with Python"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/certificationsfield"
            android:text="IBM"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/certificationsfield"
            android:text="Deep Learning Essentials"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/certificationsfield"
            android:text="IBM"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/certificationsfield"
            android:text="Getting Started with Threat Hunting and Intelligence"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/certificationsfield"
            android:text="IBM"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/certificationsfield"
            android:text="AWS Academy Graduate- AWS Academy Cloud Foundations"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/certificationsfield"
            android:text="Amazon Web Services(AWS)"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>