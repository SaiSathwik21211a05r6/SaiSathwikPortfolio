<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_1761190__340"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:id="@+id/blank"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blank"
        tools:layout_editor_absoluteX="0dp"
        android:background="@drawable/roundedlayout"
        android:layout_margin="12dp"
        tools:layout_editor_absoluteY="115dp"
        android:id="@+id/skilloptions">

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Description"
            android:background="@drawable/roundrectangle"

            android:id="@+id/description"
            app:layout_constraintBottom_toBottomOf="@id/skilloptions"
            android:layout_marginBottom="350dp"
            app:layout_constraintStart_toStartOf="@id/skilloptions"
            android:layout_marginStart="90dp"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="350dp"
            android:layout_marginTop="250dp"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Demographics"
            android:background="@drawable/roundrectangle"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="237dp"
            app:layout_constraintTop_toTopOf="@id/skilloptions"
            app:layout_constraintBottom_toTopOf="@id/softskills"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="90dp"
            android:layout_marginTop="100dp"
            android:id="@+id/demographics"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
