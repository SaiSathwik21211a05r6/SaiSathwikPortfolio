<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/topmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="55dp"

        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="55dp"
            app:srcCompat="@drawable/_022_06_11__6__11zon"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="55dp"

            android:contentDescription="Profile" />

        <TextView
            android:layout_width="205dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="48dp"
            android:background="#FF2400"


            android:text="Sai Sathwik Kosuru"
            android:textColor="@color/white"
            android:textSize="45sp"
            app:layout_editor_absoluteX="12dp"
            app:layout_editor_absoluteY="265dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="731dp"
        app:layout_constraintTop_toBottomOf="@id/topmenu"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/topmenu"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/homerecycler1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="About"

            android:foregroundGravity="center"
            android:textColor="@color/purple_700"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textSize="60sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sai Sathwik is a 21-25-CSE undergraduate from B V Raju Instiute of technology, Narsapur. Having known programming languages like JAVA, C, Kotlin, Python, and SQL, He is skilled at Machine learning, deep learning and cybersecurity and developed trendsetting projects for the same. Know more about Sai Sathwik here."
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:textSize="30sp"/>
        </LinearLayout>
        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>