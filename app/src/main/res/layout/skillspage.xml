<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_1761190__340"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:id="@+id/hardskillsheading"
        android:text="Hard Skills"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:layout_margin="12dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedlayout"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/hardskillsheading"
        app:layout_constraintStart_toStartOf="parent"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/Skillscontent"
        android:layout_marginTop="12dp"
            android:layout_margin="12dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Machine Learning"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/hardskillsheading"
        android:layout_marginLeft="15dp"
        android:id="@+id/machinelearning"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deep Learning"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/Skillscontent"
        android:layout_marginLeft="15dp"
        android:layout_alignEnd="@id/machinelearning"
        android:id="@+id/deeplearning"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Natural Language Processing"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/roundrectangle"
            app:layout_constraintTop_toBottomOf="@id/Skillscontent"
            android:layout_marginLeft="15dp"
            android:id="@+id/nlp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generative AI or GANs"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/roundrectangle"
            app:layout_constraintTop_toBottomOf="@id/Skillscontent"
            android:layout_marginLeft="15dp"
            android:id="@+id/gans"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SQL and DBMS"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/Skillscontent"
        android:layout_marginLeft="15dp"

        android:id="@+id/sqlanddbms"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android App Development:Kotlin"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/Skillscontent"
        android:layout_marginLeft="15dp"
        android:id="@+id/androidappdevelopment"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web Development:HTML, CSS, and Javascript"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/roundrectangle"
        app:layout_constraintTop_toBottomOf="@id/Skillscontent"
        android:layout_marginLeft="15dp"
        android:id="@+id/webdevelopment"
        />

    </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>